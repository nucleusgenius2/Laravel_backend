{
    "userRegistration": {
        "post": {
            "summary": "Обычная регистрация",
            "description": "Обычная регистрация пользователя",
            "operationId": "userRegistration",
            "tags": ["Authentication"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "phone": {
                                    "type": "string",
                                    "example": "+79999999999"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "user@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password123"
                                },
                                "password_confirmation": {
                                    "type": "string",
                                    "example": "password123"
                                },
                                "currency": {
                                    "type": "string",
                                    "example": "rub"
                                },
                                "refCode": {
                                    "type": "string",
                                    "example": "abcd1234"
                                }
                            },
                            "required": ["phone", "email", "password", "password_confirmation", "currency"]
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "User successfully registered.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "message": {
                                                "type": "string",
                                                "example": "Регистрация прошла успешно"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "success"
                                            },
                                            "json": {
                                                "type": "string",
                                                "example": "some_generated_token"
                                            }
                                        }
                                    },
                                    "code": {
                                        "type": "integer",
                                        "example": 200
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "userLogin": {
        "post": {
            "summary": "User login",
            "description": "Обычный вход",
            "operationId": "userLogin",
            "tags": ["Authentication"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "user@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password123"
                                }
                            },
                            "required": ["email", "password"]
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "User successfully logged in.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "message": {
                                                "type": "string",
                                                "example": "Вход успешен"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "success"
                                            },
                                            "json": {
                                                "type": "object",
                                                "properties": {
                                                    "token": {
                                                        "type": "string",
                                                        "example": "some_generated_token"
                                                    },
                                                    "user": {
                                                        "type": "string",
                                                        "example": "John Doe"
                                                    },
                                                    "level": {
                                                        "type": "object",
                                                        "properties": {
                                                            "user_level": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "max_amount": {
                                                                "type": "string",
                                                                "example": "499.99"
                                                            },
                                                            "full_amount": {
                                                                "type": "number",
                                                                "example": 0
                                                            }
                                                        }
                                                    },
                                                    "currency": {
                                                        "type": "string",
                                                        "example": "rub"
                                                    },
                                                    "balance": {
                                                        "type": "number",
                                                        "example": 100.5
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "code": {
                                        "type": "integer",
                                        "example": 200
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
