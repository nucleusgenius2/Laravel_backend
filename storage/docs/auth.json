{
    "userRegistration": {
        "post": {
            "summary": "Обычная регистрация",
            "description": "Обычная регистрация пользователя",
            "operationId": "userRegistration",
            "tags": ["Authentication"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "phone": {
                                    "type": "string",
                                    "example": "+79999999999"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "user@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password123"
                                },
                                "password_confirmation": {
                                    "type": "string",
                                    "example": "password123"
                                },
                                "currency": {
                                    "type": "string",
                                    "example": "RUB"
                                },
                                "refCode": {
                                    "type": "string",
                                    "example": "abcd1234"
                                }
                            },
                            "required": ["phone", "email", "password", "password_confirmation", "currency"]
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "User successfully registered.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "Регистрация прошла успешно"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "success"
                                    },
                                    "json": {
                                        "type": "object",
                                        "properties": {
                                            "token": {
                                                "type": "string",
                                                "example": "enSlFgo0NHJ9SbSP4vn7IMDpsv8pEP2UieF2BBb84b6abf"
                                            },
                                            "user_name": {
                                                "type": "string",
                                                "example": "NdRimQlyFA"
                                            },
                                            "level": {
                                                "type": "object",
                                                "properties": {
                                                    "user_level": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "max_amount": {
                                                        "type": "string",
                                                        "example": "499.99"
                                                    },
                                                    "full_amount": {
                                                        "type": "integer",
                                                        "example": 0
                                                    }
                                                }
                                            },
                                            "currency": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "balance": {
                                                "type": "integer",
                                                "example": 0
                                            },
                                            "country": {
                                                "type": "string",
                                                "example": "RU"
                                            },
                                            "main_currency": {
                                                "type": "string",
                                                "example": "RUB"
                                            },
                                            "avatar": {
                                                "type": "string",
                                                "nullable": true,
                                                "example": null
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "422": {
                    "description": "Ошибка валидации.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "status": {
                                                "type": "string",
                                                "example": "error"
                                            },
                                            "message": {
                                                "type": "object",
                                                "properties": {
                                                    "phone": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string",
                                                            "example": "The phone field format is invalid."
                                                        }
                                                    },
                                                    "email": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string",
                                                            "example": "The email has already been taken."
                                                        }
                                                    }
                                                }
                                            },
                                            "json": {
                                                "type": "array",
                                                "example": []
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "userLogin": {
        "post": {
            "summary": "User login",
            "description": "Обычный вход",
            "operationId": "userLogin",
            "tags": ["Authentication"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "user@example.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password123"
                                }
                            },
                            "required": ["email", "password"]
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "User successfully registered.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "message": {
                                                "type": "string",
                                                "example": "Регистрация прошла успешно"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "success"
                                            },
                                            "json": {
                                                "type": "object",
                                                "properties": {
                                                    "token": {
                                                        "type": "string",
                                                        "example": "nSlFgo0NHJ9SbDmSP4vn7IMDpsv8pEP2UieF2BBb84b6abf"
                                                    },
                                                    "user_name": {
                                                        "type": "string",
                                                        "example": "NdRimQlyFA"
                                                    },
                                                    "level": {
                                                        "type": "object",
                                                        "properties": {
                                                            "user_level": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "max_amount": {
                                                                "type": "string",
                                                                "example": "499.99"
                                                            },
                                                            "full_amount": {
                                                                "type": "number",
                                                                "example": 0
                                                            }
                                                        }
                                                    },
                                                    "currency": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "balance": {
                                                        "type": "number",
                                                        "example": 0
                                                    },
                                                    "country": {
                                                        "type": "string",
                                                        "example": "RU"
                                                    },
                                                    "main_currency": {
                                                        "type": "string",
                                                        "example": "RUB"
                                                    },
                                                    "avatar": {
                                                        "type": "string",
                                                        "example": "null"
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "code": {
                                        "type": "integer",
                                        "example": 200
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "Bad Request - Email not found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "Email не найден"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "error"
                                    },
                                    "json": {
                                        "type": "null"
                                    }
                                }
                            }
                        }
                    }
                },
                "422": {
                    "description": "Unprocessable Entity - Validation errors",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "status": {
                                                "type": "string",
                                                "example": "error"
                                            },
                                            "message": {
                                                "type": "object",
                                                "properties": {
                                                    "email": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string",
                                                            "example": "The email field is required."
                                                        }
                                                    }
                                                }
                                            },
                                            "json": {
                                                "type": "array",
                                                "items": {}
                                            }
                                        }
                                    },
                                    "code": {
                                        "type": "integer",
                                        "example": 422
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
