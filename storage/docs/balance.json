{
    "getBalance": {
        "summary": "Возвращает всех счетов текущего юзера",
        "description": "Возвращает всех счетов (балансов) текущего юзера, включая бонусы. В зависимости от типа счета данные могут отличаться.",
        "tags": ["Balance"],
        "security": [
            {
                "sanctum": []
            }
        ],
        "responses": {
            "200": {
                "description": "Список балансов",
                "content": {
                    "application/json": {
                        "example": {
                            "message": null,
                            "status": "success",
                            "json": [
                                {
                                    "type": "main",
                                    "amount": "0.00",
                                    "default": false,
                                    "currency": {
                                        "name": "Russian Ruble",
                                        "img": "",
                                        "code": "RUB"
                                    }
                                },
                                {
                                    "type": "bonus",
                                    "amount": "1.00",
                                    "count": "1.00",
                                    "default": true,
                                    "to_date" : "дата",
                                    "nominal" : "пока что не известно как будет выглядеть",
                                    "currency": {
                                        "name": "Russian Ruble",
                                        "img": "",
                                        "code": "RUB"
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "401": {
                "description": "Не авторизован",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Unauthenticated.",
                            "status": "error"
                        }
                    }
                }
            }
        }
    },
    "postBalance": {
        "summary": "Создать счет для юзера",
        "description": "Создаёт новый счёт (баланс) для пользователя.",
        "tags": ["Balance"],
        "security": [
            {
                "sanctum": []
            }
        ],
        "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "currency": {
                                "type": "string",
                                "example": "USD"
                            }
                        },
                        "required": ["currency"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Баланс успешно создан",
                "content": {
                    "application/json": {
                        "example": {
                            "message": null,
                            "status": "success",
                            "json": null
                        }
                    }
                }
            },
            "401": {
                "description": "Пользователь не авторизован.",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Unauthenticated."
                        }
                    }
                }
            },
            "422": {
                "description": "Ошибка валидации (невалидный код валюты)",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Не валидный код валюты: incorrect_currency",
                            "status": "error",
                            "json": null
                        }
                    }
                }
            },
            "500": {
                "description": "Ошибка сервера (например, ошибка базы данных)",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Произошла ошибка на сервере.",
                            "status": "error",
                            "json": null
                        }
                    }
                }
            }
        }
    },
    "defaultBalance" : {
        "summary": "Установить текущую валюту юзера",
        "description": "Устанавливает какая валюта будет считаться выбранной по умолчанию (она же главная валюта).",
        "tags": ["Balance"],
        "security": [
            {
                "sanctum": []
            }
        ],
        "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "currency": {
                                "type": "string",
                                "description": "Код валюты, для которой устанавливается баланс по умолчанию.",
                                "example": "USD"
                            }
                        },
                        "required": ["currency"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Валюта успешно установлен по умолчанию.",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "null",
                            "status": "success",
                            "json": null
                        }
                    }
                }
            },
            "401": {
                "description": "Пользователь не авторизован.",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Unauthenticated."
                        }
                    }
                }
            },
            "422": {
                "description": "Ошибка валидации (невалидный код валюты)",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Не валидный код валюты: incorrect_currency",
                            "status": "error",
                            "json": null
                        }
                    }
                }
            },
            "500": {
                "description": "Ошибка сервера при установке валюты.",
                "content": {
                    "application/json": {
                        "example": {
                            "message": "Не удалось установить баланс по умолчанию.",
                            "status": "error",
                            "json": null
                        }
                    }
                }
            }
        }
    }
}
