{
    "setCountry": {
        "summary": "Установить страну пользователя",
        "description": "Сохраняет информацию о стране пользователя",
        "tags": [
            "Country"
        ],
        "responses": {
            "200": {
                "description": "Успешный ответ",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "null",
                                    "example": null
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "json": {
                                    "type": "null",
                                    "example": null
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "getCountry" : {
        "summary": "Получить список стран",
        "description": "Возвращает список стран с их кодами и названиями.",
        "tags": [
            "Country"
        ],
        "responses": {
            "200": {
                "description": "Успешный ответ со списком стран",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "nullable": true,
                                    "example": null
                                },
                                "status": {
                                    "type": "string",
                                    "example": "success"
                                },
                                "json": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "code": {
                                                "type": "string",
                                                "example": "RU"
                                            },
                                            "title": {
                                                "type": "string",
                                                "example": "Russian Federation"
                                            },
                                            "phone_prefix": {
                                                "type": "integer",
                                                "example": 7
                                            }
                                        }
                                    },
                                    "example": [
                                        {
                                            "code": "RU",
                                            "title": "Russian Federation",
                                            "phone_prefix": 7
                                        },
                                        {
                                            "code": "US",
                                            "title": "United States of America",
                                            "phone_prefix": 1
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
